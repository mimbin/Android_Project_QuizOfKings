<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

<!--    <ImageView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        android:id="@+id/img3"-->
<!--        android:background="@drawable/img"-->
<!--        />-->

    <EditText
        android:id="@+id/UsernameLogIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@android:color/holo_blue_light"
        android:hint="نام کاربری"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.72" />

    <EditText
        android:id="@+id/PassLogIn"
        android:hint="رمز عبور"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/UsernameLogIn"
        app:layout_constraintEnd_toEndOf="@+id/UsernameLogIn"
        app:layout_constraintStart_toStartOf="@+id/UsernameLogIn"
        android:backgroundTint="@android:color/holo_blue_light"

        />

    <Button
        android:id="@+id/LogInButton"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="100dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/holo_blue_light"
        android:text="ورود"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PassLogIn" />

    <TextView
        android:id="@+id/signInText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:paddingHorizontal="60dp"
        android:text="لطفا اطلاعات خود را وارد کنید"
        android:textAlignment="center"
        android:textColor="#D6D6D6"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/UsernameLogIn"
        app:layout_constraintEnd_toEndOf="@+id/UsernameLogIn"
        app:layout_constraintStart_toStartOf="@+id/UsernameLogIn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />


</androidx.constraintlayout.widget.ConstraintLayout>