<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/im"
    >
<!--    android:background="@drawable/img"-->


<!--    <ImageView-->
<!--        android:id="@+id/img1"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:background="@drawable/img" />-->

    <TextView
        android:id="@+id/welcomeSignUpText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="اگر کاربر جدید هستید و تا به حال عضو بازی نشدید"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.606" />

    <Button
        android:id="@+id/newUserButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/welcomeSignUpText"
        app:layout_constraintStart_toStartOf="@+id/welcomeSignUpText"
        app:layout_constraintEnd_toEndOf="@+id/welcomeSignUpText"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:text="کاربر جدید"
        android:backgroundTint="@android:color/holo_green_light"

        />
<!--text2-->
    <TextView
        android:id="@+id/welcomeLogInText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:textSize="18sp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/newUserButton"
        app:layout_constraintStart_toStartOf="@+id/welcomeSignUpText"
        app:layout_constraintEnd_toEndOf="@+id/welcomeSignUpText"

        android:textColor="@android:color/white"
        android:text="اگر قبلا عضو شدید گزینه زیر را انتخاب کنید"
        />
<!--btn2-->
    <Button
        android:id="@+id/LoginWelcomeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/welcomeLogInText"
        app:layout_constraintStart_toStartOf="@+id/welcomeLogInText"
        app:layout_constraintEnd_toEndOf="@+id/welcomeLogInText"

        android:backgroundTint="@android:color/holo_blue_light"
        android:text="عضو هستم(ورود)" />



</androidx.constraintlayout.widget.ConstraintLayout>