    <TextView
        android:id="@+id/text6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="440dp"
        android:layout_marginLeft="100dp"
            />

</androidx.constraintlayout.widget.ConstraintLayout>